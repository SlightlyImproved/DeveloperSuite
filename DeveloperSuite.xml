<GuiXml>
    <String name="DEVELOPER_SUITE_FONT" value="DeveloperSuite/RobotoMono-Regular.ttf" />
    <String name="DEVELOPER_SUITE_FONT_BOLD" value="DeveloperSuite/RobotoMono-Bold.ttf" />

    <Font name="DeveloperSuiteFontSmall" font="$(DEVELOPER_SUITE_FONT)|12|shadow" />
    <Font name="DeveloperSuiteFont" font="$(DEVELOPER_SUITE_FONT)|14|shadow" />
    <Font name="DeveloperSuiteFontBold" font="$(DEVELOPER_SUITE_FONT_BOLD)|14|shadow" />
    <Font name="DeveloperSuiteFontBig" font="$(DEVELOPER_SUITE_FONT_BOLD)|18|shadow" />
    <Font name="DeveloperSuiteFontHuge" font="$(DEVELOPER_SUITE_FONT_BOLD)|22|shadow" />

    <Controls>
        <Button name="DeveloperSuiteButton" font="DeveloperSuiteFontBig" inherits="ZO_DefaultTextButton" virtual="true" blendMode="ADD" alpha="0.9">
            <FontColors normalColor="CCCCCC" pressedColor="AAAAAA" mouseOverColor="FFFFFF" disabledColor="888888" />
        </Button>

        <Button name="DeveloperSuiteStateButton" inherits="DeveloperSuiteButton" font="DeveloperSuiteFontBold" horizontalAlignment="LEFT" virtual="true">
            <OnInitialized>
                DeveloperSuite_StateButton_Initialize(self)
            </OnInitialized>

            <OnClicked>
                DeveloperSuite_StateButton_Toggle(self)
            </OnClicked>
        </Button>

        <Control name="DeveloperSuiteExplorerRow" virtual="true">
            <Anchor point="TOPLEFT"/>
            <Anchor point="TOPRIGHT"/>
            <Dimensions y="26"/>
            <Controls>
                <Texture name="$(parent)BG" inherits="ZO_ThinListBgStrip" />

                <Label name="$(parent)Value" font="DeveloperSuiteFont" verticalAlignment="CENTER">
                    <Dimensions x="160" y="16" />
                    <Anchor point="RIGHT" />
                </Label>
                <Label name="$(parent)Type" font="DeveloperSuiteFont" verticalAlignment="CENTER" wrapMode="ELLIPSIS">
                    <Dimensions x="110" y="16" />
                    <Anchor point="RIGHT" relativeTo="$(parent)Value" relativePoint="LEFT" />
                </Label>
                <EditBox name="$(parent)Name" inherits="ZO_DefaultEdit" font="DeveloperSuiteFont" editEnabled="false">
                    <Dimensions y="16" />
                    <Anchor point="LEFT" />
                    <Anchor point="RIGHT" relativeTo="$(parent)Type" relativePoint="LEFT" offsetX="-10" />

                    <OnMouseUp>
                        self:TakeFocus()
                        self:SelectAll()
                    </OnMouseUp>
                    <OnFocusLost>
                        self:SetCursorPosition(0)
                    </OnFocusLost>
                </EditBox>
            </Controls>
        </Control>

        <Control name="DeveloperSuiteLibraryRow" mouseEnabled="true" virtual="true">
            <Anchor point="TOPLEFT"/>
            <Anchor point="TOPRIGHT"/>
            <Dimensions y="26"/>
            <OnMouseEnter>
                DeveloperSuiteLibraryRow_OnMouseEnter(self)
            </OnMouseEnter>
            <OnMouseExit>
                DeveloperSuiteLibraryRow_OnMouseExit(self)
            </OnMouseExit>
            <OnMouseUp>
                DeveloperSuiteLibraryRow_OnMouseUp(self, button, upInside)
            </OnMouseUp>
            <Controls>
                <Texture name="$(parent)BG" inherits="ZO_ThinListBgStrip" />

                <Label name="$(parent)Name" font="DeveloperSuiteFont">
                    <Dimensions y="16" />
                    <Anchor point="LEFT" />
                    <Anchor point="RIGHT" />
                </Label>
            </Controls>
        </Control>

        <!-- / -->

        <TopLevelControl name="DeveloperSuiteAbout" mouseEnabled="true" movable="true" resizeHandleSize="0">
            <Dimensions x="320" y="140"  />
            <DimensionConstraints maxX="320" maxY="140"  />
            <Anchor point="CENTER" />

            <OnMouseDown>
                if (button == MOUSE_BUTTON_INDEX_RIGHT) then
                    DeveloperSuite_Hide(self)
                end
            </OnMouseDown>

            <Controls>
                <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="222222" />

                <Label name="$(parent)NameLabel" text="Developer Suite" font="DeveloperSuiteFontHuge">
                    <Anchor point="TOP" offsetY="25" />
                </Label>

                <Label name="$(parent)VersionLabel" text="Version 0.1.2alpha (Dec 6 2015)" font="DeveloperSuiteFontBold">
                    <Anchor point="TOP" relativeTo="$(parent)NameLabel" relativePoint="BOTTOM" offsetY="5" />
                </Label>

                <Button name="$(parent)CloseButton" inherits="DeveloperSuiteButton" text="CLOSE">
                    <Dimensions x="55" y="20" />
                    <Anchor point="BOTTOM" offsetY="-15" offsetX="-55" />

                    <OnClicked>
                        DeveloperSuite_Hide(self:GetParent())
                    </OnClicked>
                </Button>

                <Button name="$(parent)FeedbackButton" inherits="DeveloperSuiteButton" text="FEEDBACK">
                    <Dimensions x="88" y="20" />
                    <Anchor point="LEFT" relativeTo="$(parent)CloseButton" relativePoint="RIGHT" offsetX="25" />

                    <OnClicked>
                        MAIL_SEND:ComposeMailTo("@eolhain")
                    </OnClicked>
                </Button>
            </Controls>
        </TopLevelControl>

        <!-- / -->

        <TopLevelControl name="DeveloperSuiteEditor" mouseEnabled="true" movable="true" resizeHandleSize="10">
            <DimensionConstraints minX="480" minY="320"  />
            <Anchor point="CENTER" />

            <OnMouseDown>
                if (button == MOUSE_BUTTON_INDEX_RIGHT) then
                    DeveloperSuite_Hide(self)
                end
            </OnMouseDown>

            <Controls>
                <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="004455" />

                <EditBox name="$(parent)ScriptEditBox" font="DeveloperSuiteFont" inherits="ZO_DefaultEditMultiLine" maxInputCharacters="1000">
                    <Anchor point="TOPLEFT" offsetX="20" offsetY="20" />
                    <Anchor point="BOTTOMRIGHT" offsetX="-20" offsetY="-58" />

                    <Controls>
                        <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="111111" alpha="0.9">
                            <Anchor point="TOPLEFT" offsetX="-10" offsetY="-10" />
                            <Anchor point="BOTTOMRIGHT" offsetX="10" offsetY="10" />
                        </Texture>
                    </Controls>
                </EditBox>

                <Button name="$(parent)RunButton" inherits="DeveloperSuiteButton" text="RUN">
                    <Dimensions x="100" y="20" />
                    <Anchor point="BOTTOM" offsetY="-15" />
                </Button>
            </Controls>
        </TopLevelControl>

        <!-- / -->

        <TopLevelControl name="DeveloperSuiteExplorer" mouseEnabled="true" movable="true" resizeHandleSize="10">
            <DimensionConstraints minX="640" minY="320" />
            <Anchor point="CENTER" />

            <OnMouseDown>
                if (button == MOUSE_BUTTON_INDEX_RIGHT) then
                    DeveloperSuite_Hide(self)
                end
            </OnMouseDown>

            <Controls>
                <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="773300" />

                <EditBox name="$(parent)SearchBox" inherits="ZO_DefaultEdit" font="DeveloperSuiteFont" textType="ALPHANUMERIC">
                    <Dimensions y="16" />
                    <Anchor point="TOPLEFT" offsetX="20" offsetY="20" />
                    <Anchor point="TOPRIGHT" offsetX="-20" offsetY="20" />

                    <Controls>
                        <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="111111" alpha="0.9">
                            <Anchor point="TOPLEFT" offsetX="-10" offsetY="-10" />
                            <Anchor point="BOTTOMRIGHT" offsetX="10" offsetY="10" />
                        </Texture>
                    </Controls>
                </EditBox>

                <Control name="$(parent)SearchTypes">
                    <Dimensions y="16" />
                    <Anchor point="TOPLEFT" relativeTo="$(parent)SearchBox" relativePoint="BOTTOMLEFT" offsetY="25" />
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)SearchBox" relativePoint="BOTTOMRIGHT" offsetY="25" />

                    <Controls>
                        <Button name="$(parent)Function" inherits="DeveloperSuiteStateButton" text="FUNCTION">
                            <Dimensions x="66" y="26" />
                            <Anchor point="LEFT" />
                        </Button>

                        <Button name="$(parent)Table" inherits="DeveloperSuiteStateButton" text="TABLE/USERDATA">
                            <Dimensions x="116" y="26" />
                            <Anchor point="LEFT" relativeTo="$(parent)Function" relativePoint="RIGHT" offsetX="25" />
                        </Button>

                        <Button name="$(parent)Number" inherits="DeveloperSuiteStateButton" text="NUMBER">
                            <Dimensions x="50" y="26" />
                            <Anchor point="LEFT" relativeTo="$(parent)Table" relativePoint="RIGHT" offsetX="25" />
                        </Button>

                        <Button name="$(parent)String" inherits="DeveloperSuiteStateButton" text="STRING">
                            <Dimensions x="50" y="26" />
                            <Anchor point="LEFT" relativeTo="$(parent)Number" relativePoint="RIGHT" offsetX="25" />
                        </Button>

                        <Button name="$(parent)Other" inherits="DeveloperSuiteStateButton" text="OTHER">
                            <Dimensions x="42" y="26" />
                            <Anchor point="LEFT" relativeTo="$(parent)String" relativePoint="RIGHT" offsetX="25" />
                        </Button>
                    </Controls>
                </Control>

                <Control name="$(parent)List" inherits="ZO_ScrollList">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)SearchTypes" relativePoint="BOTTOMLEFT" offsetY="20" />
                    <Anchor point="BOTTOMRIGHT" offsetX="-10" offsetY="-15" />

                    <Controls>
                        <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="111111" alpha="0.9">
                            <Anchor point="TOPLEFT" offsetX="-10" offsetY="-5" />
                            <Anchor point="BOTTOMRIGHT" offsetX="0" offsetY="5" />
                        </Texture>
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>

        <!-- / -->

        <TopLevelControl name="DeveloperSuiteLibrary" mouseEnabled="true" movable="true" resizeHandleSize="10">
            <DimensionConstraints minX="320" maxX="640" minY="640" />
            <Anchor point="RIGHT" relativePoint="CENTER" />

            <OnMouseDown>
                if (button == MOUSE_BUTTON_INDEX_RIGHT) then
                    DeveloperSuite_Hide(self)
                end
            </OnMouseDown>

            <Controls>
                <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="225500" />

                <Control name="$(parent)Preview">
                    <Dimensions x="640" y="640" />
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" />

                    <Controls>
                        <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="111111" alpha="0.9" />

                        <Texture name="$(parent)Texture" resizeToFitFile="true">
                            <DimensionConstraints maxX="590" maxY="590" />
                            <Anchor point="CENTER" />
                        </Texture>

                        <EditBox name="$(parent)Path" inherits="ZO_DefaultEdit" font="DeveloperSuiteFont" horizontalAlignment="CENTER" editEnabled="false">
                            <Dimensions x="590" y="16" />
                            <Anchor point="BOTTOM" offsetY="-25" />
                            <OnMouseUp>
                                self:TakeFocus()
                                self:SelectAll()
                            </OnMouseUp>
                        </EditBox>
                    </Controls>
                </Control>

                <EditBox name="$(parent)SearchBox" inherits="ZO_DefaultEdit" font="DeveloperSuiteFont" textType="ALPHANUMERIC">
                    <Dimensions y="16" />
                    <Anchor point="TOPLEFT" offsetX="20" offsetY="20" />
                    <Anchor point="TOPRIGHT" offsetX="-20" offsetY="20" />

                    <OnUpArrow>
                        DeveloperSuiteLibrarySearchBox_OnUpArrow()
                    </OnUpArrow>

                    <OnDownArrow>
                        DeveloperSuiteLibrarySearchBox_OnDownArrow()
                    </OnDownArrow>

                    <Controls>
                        <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="111111" alpha="0.9">
                            <Anchor point="TOPLEFT" offsetX="-10" offsetY="-10" />
                            <Anchor point="BOTTOMRIGHT" offsetX="10" offsetY="10" />
                        </Texture>
                    </Controls>
                </EditBox>

                <Control name="$(parent)SearchType">
                    <Dimensions y="16" />
                    <Anchor point="TOPLEFT" relativeTo="$(parent)SearchBox" relativePoint="BOTTOMLEFT" offsetY="25" />
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)SearchBox" relativePoint="BOTTOMRIGHT" offsetY="25" />

                    <Controls>
                        <Button name="$(parent)TextureButton" inherits="DeveloperSuiteStateButton" text="TEXTURES">
                            <Dimensions x="66" y="26" />
                            <Anchor point="LEFT" />
                        </Button>

                        <Button name="$(parent)SoundButton" inherits="DeveloperSuiteStateButton" text="SOUND">
                            <Dimensions x="42" y="26" />
                            <Anchor point="LEFT" relativeTo="$(parent)TextureButton" relativePoint="RIGHT" offsetX="25" />
                        </Button>
                    </Controls>
                </Control>

                <Control name="$(parent)List" inherits="ZO_ScrollList">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)SearchType" relativePoint="BOTTOMLEFT" offsetY="20" />
                    <Anchor point="BOTTOMRIGHT" offsetX="-10" offsetY="-15" />

                    <Controls>
                        <Texture name="$(parent)BG" inherits="ZO_TintableBackground" color="111111" alpha="0.9">
                            <Anchor point="TOPLEFT" offsetX="-10" offsetY="-5" />
                            <Anchor point="BOTTOMRIGHT" offsetX="0" offsetY="5" />
                        </Texture>
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
